<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Allva.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="900"
             x:Class="Allva.Desktop.Views.MenuHamburguesa.BalancedeCuentasView"
             x:DataType="vm:BalancedeCuentasViewModel">

    <UserControl.Styles>
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#595959"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        
        <Style Selector="Button.tab-button:pointerover">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        
        <Style Selector="Button.tab-button-selected">
            <Setter Property="Background" Value="#ffd966"/>
            <Setter Property="Foreground" Value="#0b5394"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        
        <Style Selector="Button.filter-button">
            <Setter Property="Background" Value="#ffd966"/>
            <Setter Property="Foreground" Value="#0b5394"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        
        <Style Selector="Button.filter-button:pointerover">
            <Setter Property="Background" Value="#E8C85A"/>
        </Style>
        
        <Style Selector="TextBox.filter-input">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="Button.action-button">
            <Setter Property="Background" Value="#0b5394"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <Style Selector="Button.action-button:pointerover">
            <Setter Property="Background" Value="#084171"/>
        </Style>
        
        <!-- Estilo para filas clickeables -->
        <Style Selector="Border.fila-operacion">
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        <Style Selector="Border.fila-clickeable">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Border.fila-clickeable:pointerover">
            <Setter Property="Background" Value="#E8F4FC"/>
        </Style>
    </UserControl.Styles>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" 
                Background="#ffd966"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="BALANCE DE CUENTAS"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#0b5394"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1"
                           Text="{Binding FechaActualTexto}"
                           FontSize="11"
                           Foreground="#666666"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontStyle="Italic"/>
                
                <TextBlock Grid.Column="2"
                           Text="{Binding LocalInfo}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="#0b5394"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PANEL DE FILTROS -->
            <Border Grid.Column="0"
                    Background="#FAFAFA"
                    BorderBrush="#E8E8E8"
                    BorderThickness="0,0,1,0"
                    Padding="12,14">
                <StackPanel Spacing="12">
                    
                    <Border Background="#ffd966"
                            CornerRadius="4"
                            Padding="10,8">
                        <TextBlock Text="Filtrar"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#0b5394"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- Fecha Desde -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Fecha Desde"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding FechaDesdeTexto}" 
                                 Classes="filter-input"
                                 Watermark="dd/mm/aaaa"
                                 MaxLength="10"/>
                    </StackPanel>
                    
                    <!-- Fecha Hasta -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Fecha Hasta"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding FechaHastaTexto}" 
                                 Classes="filter-input"
                                 Watermark="dd/mm/aaaa"
                                 MaxLength="10"/>
                    </StackPanel>
                    
                    <!-- N Operacion -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="N Operacion"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"/>
                        <TextBox Classes="filter-input"
                                 Watermark="Desde"
                                 Text="{Binding OperacionDesde}"/>
                        <TextBox Classes="filter-input"
                                 Watermark="Hasta"
                                 Text="{Binding OperacionHasta}"/>
                    </StackPanel>
                    
                    <Button Content="Buscar"
                            Classes="filter-button"
                            Command="{Binding BuscarCommand}"
                            Margin="0,6,0,0"/>
                    
                    <Button Content="Limpiar"
                            Background="White"
                            Foreground="#666666"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Padding="10,6"
                            FontSize="11"
                            CornerRadius="4"
                            HorizontalAlignment="Stretch"
                            Cursor="Hand"
                            Command="{Binding LimpiarFiltrosCommand}"/>
                    
                </StackPanel>
            </Border>

            <!-- CONTENIDO DERECHO CON SCROLL -->
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Border Background="White" Padding="16">
                    <StackPanel Spacing="12">
                        
                        <!-- TABS -->
                        <Border Background="#F5F5F5" CornerRadius="4" Padding="3">
                            <StackPanel Orientation="Horizontal" Spacing="0">
                                <Button Content="Billetes avion"
                                        Classes="tab-button"
                                        Command="{Binding CambiarTabCommand}"
                                        CommandParameter="billetes"/>
                                <Button Content="Pack viaje"
                                        Classes="tab-button"
                                        Command="{Binding CambiarTabCommand}"
                                        CommandParameter="viaje"/>
                                <Button Content="Pack alimentos"
                                        Classes="tab-button"
                                        Command="{Binding CambiarTabCommand}"
                                        CommandParameter="alimentos"/>
                                <Button Content="Divisa"
                                        Classes="tab-button-selected"
                                        Command="{Binding CambiarTabCommand}"
                                        CommandParameter="divisa"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Aviso de click -->
                        <TextBlock Text="Click en una operacion de compra para ver detalle y reimprimir"
                                   FontSize="10"
                                   Foreground="#888888"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"/>
                        
                        <!-- TABLA DE OPERACIONES -->
                        <Border BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                ClipToBounds="True">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Header de tabla -->
                                <Border Grid.Row="0"
                                        Background="#0b5394"
                                        Padding="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Fecha" 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="10"
                                                   Padding="8,8" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Hora" 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="10"
                                                   Padding="8,8" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="N Oper." 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="10"
                                                   Padding="8,8" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="Descripcion" 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="10"
                                                   Padding="8,8"/>
                                        <TextBlock Grid.Column="4" Text="Divisa" 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="10"
                                                   Padding="8,8" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="S. Euros" 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="10"
                                                   Padding="8,8" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="E. Euros" 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="10"
                                                   Padding="8,8" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Filas de datos (clickeables si tienen NumeroOperacion) -->
                                <ScrollViewer Grid.Row="1" 
                                              MaxHeight="200"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Operaciones}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding BackgroundColor}"
                                                        BorderBrush="#EEEEEE"
                                                        BorderThickness="0,0,0,1"
                                                        Classes.fila-clickeable="{Binding EsClickeable}"
                                                        Classes.fila-operacion="{Binding !EsClickeable}"
                                                        Name="FilaOperacion"
                                                        PointerPressed="OnFilaOperacionClick">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="70"/>
                                                            <ColumnDefinition Width="50"/>
                                                            <ColumnDefinition Width="80"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="80"/>
                                                            <ColumnDefinition Width="80"/>
                                                            <ColumnDefinition Width="80"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Column="0" Text="{Binding Fecha}" 
                                                                   FontSize="10" Foreground="#444444"
                                                                   Padding="8,6" HorizontalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Hora}" 
                                                                   FontSize="10" Foreground="#444444"
                                                                   Padding="8,6" HorizontalAlignment="Center"/>
                                                        <TextBlock Grid.Column="2" Text="{Binding NumeroOperacion}" 
                                                                   FontSize="9" Foreground="#0b5394" FontWeight="Medium"
                                                                   Padding="8,6" HorizontalAlignment="Center"
                                                                   TextDecorations="{Binding TextoSubrayado}"/>
                                                        <TextBlock Grid.Column="3" Text="{Binding Descripcion}" 
                                                                   FontSize="10" Foreground="#444444"
                                                                   Padding="8,6"/>
                                                        <TextBlock Grid.Column="4" Text="{Binding CantidadDivisa}" 
                                                                   FontSize="10" Foreground="#0b5394" FontWeight="SemiBold"
                                                                   Padding="8,6" HorizontalAlignment="Center"/>
                                                        <TextBlock Grid.Column="5" Text="{Binding SalidaEuros}" 
                                                                   FontSize="10" Foreground="{Binding SalidaEurosColor}" FontWeight="Medium"
                                                                   Padding="8,6" HorizontalAlignment="Center"/>
                                                        <TextBlock Grid.Column="6" Text="{Binding EntradaEuros}" 
                                                                   FontSize="10" Foreground="#008800" FontWeight="Medium"
                                                                   Padding="8,6" HorizontalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        
                        <!-- Mensaje sin operaciones -->
                        <TextBlock Text="No se encontraron operaciones"
                                   FontSize="12"
                                   Foreground="#888888"
                                   HorizontalAlignment="Center"
                                   IsVisible="{Binding !Operaciones.Count}"/>
                        
                        <!-- BALANCE ACTUAL -->
                        <Border Background="#F8F8F8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="16,12">
                            <Grid ColumnDefinitions="Auto,*">
                                <Border Grid.Column="0"
                                        Background="#0b5394"
                                        CornerRadius="4"
                                        Padding="14,8"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="BALANCE ACTUAL"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            Spacing="12">
                                    <!-- T.Euros -->
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="T.Euros"
                                                   FontSize="10"
                                                   Foreground="#666666"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Medium"/>
                                        <Border Background="{Binding TotalEurosColor}"
                                                CornerRadius="4"
                                                Padding="14,6"
                                                MinWidth="70"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding TotalEuros}"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <!-- T.Divisa -->
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="T.Divisa"
                                                   FontSize="10"
                                                   Foreground="#666666"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Medium"/>
                                        <Border Background="White"
                                                BorderBrush="#0b5394"
                                                BorderThickness="2"
                                                CornerRadius="4"
                                                Padding="14,6"
                                                MinWidth="70"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding TotalDivisa}"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       Foreground="#0b5394"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- LISTA DE DIVISAS -->
                        <Border Background="#FAFAFA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12,10"
                                IsVisible="{Binding TieneDivisas}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Divisas disponibles (click para seleccionar)"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#0b5394"/>
                                <ItemsControl ItemsSource="{Binding DivisasDelLocal}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding $parent[ItemsControl].((vm:BalancedeCuentasViewModel)DataContext).SeleccionarDivisaCommand}"
                                                    CommandParameter="{Binding Codigo}"
                                                    Background="White"
                                                    BorderBrush="#0b5394"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="10,5"
                                                    Margin="0,0,6,6"
                                                    Cursor="Hand">
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <TextBlock Text="{Binding Codigo}"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"
                                                               Foreground="#0b5394"/>
                                                    <TextBlock Text="{Binding CantidadFormateada}"
                                                               FontSize="11"
                                                               Foreground="#444444"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        
                        <!-- DEPOSITO EN BANCO -->
                        <Border Background="#0b5394"
                                CornerRadius="4"
                                Padding="16,12">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Deposito en banco"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                                
                                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto">
                                    <TextBlock Grid.Column="0"
                                               Text="Divisa"
                                               FontSize="11"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               Margin="0,0,6,0"/>
                                    
                                    <Border Grid.Column="1"
                                            Background="#ffd966"
                                            CornerRadius="4"
                                            Padding="10,5"
                                            MinWidth="60">
                                        <TextBlock Text="{Binding DivisaDepositoSeleccionada}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0b5394"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <TextBlock Grid.Column="2"
                                               Text="Cantidad"
                                               FontSize="11"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               Margin="12,0,6,0"/>
                                    
                                    <Border Grid.Column="3"
                                            Background="White"
                                            CornerRadius="4"
                                            MinWidth="80">
                                        <TextBox Text="{Binding CantidadDivisaDeposito}"
                                                 BorderThickness="0"
                                                 Padding="6,4"
                                                 FontSize="11"
                                                 Watermark="Cantidad"/>
                                    </Border>
                                    
                                    <TextBlock Grid.Column="4"
                                               Text="Euros"
                                               FontSize="11"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               Margin="12,0,6,0"/>
                                    
                                    <Border Grid.Column="5"
                                            Background="White"
                                            CornerRadius="4"
                                            Margin="0,0,10,0">
                                        <TextBox Text="{Binding CantidadEurosDeposito}"
                                                 BorderThickness="0"
                                                 Padding="6,4"
                                                 FontSize="11"
                                                 Watermark="EUR recibidos"/>
                                    </Border>
                                    
                                    <Button Grid.Column="6"
                                            Content="Insertar"
                                            Classes="filter-button"
                                            Command="{Binding InsertarDepositoCommand}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- TRANSFERENCIA A CAJA -->
                        <Border Background="#ffd966"
                                CornerRadius="4"
                                Padding="16,12">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                <TextBlock Grid.Column="0"
                                           Text="Transferencia a caja"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#0b5394"
                                           VerticalAlignment="Center"/>
                                
                                <Border Grid.Column="2"
                                        Background="White"
                                        CornerRadius="4"
                                        MinWidth="100">
                                    <TextBox Text="{Binding CantidadTraspaso}"
                                             BorderThickness="0"
                                             Padding="8,6"
                                             FontSize="11"
                                             Watermark="Cantidad"/>
                                </Border>
                                
                                <Button Grid.Column="3"
                                        Content="Transferir"
                                        Classes="action-button"
                                        Margin="10,0,0,0"
                                        Command="{Binding TransferirCajaCommand}"/>
                            </Grid>
                        </Border>
                        
                        <!-- MENSAJES -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#CC3333"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="{Binding SuccessMessage}"
                                   Foreground="#008800"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   IsVisible="{Binding SuccessMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                   HorizontalAlignment="Center"/>
                        
                        <!-- BOTONES INFERIORES -->
                        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,6,0,0">
                            <Button Grid.Column="0"
                                    Content="Volver a inicio"
                                    Classes="action-button"
                                    Command="{Binding VolverCommand}"/>
                            
                            <Button Grid.Column="2"
                                    Command="{Binding ImprimirHistorialCommand}"
                                    Background="Transparent"
                                    BorderBrush="#0b5394"
                                    BorderThickness="1"
                                    Padding="14,8"
                                    CornerRadius="4"
                                    Cursor="Hand">
                                <TextBlock Text="Imprimir historial"
                                           FontSize="12"
                                           Foreground="#0b5394"
                                           FontWeight="Medium"/>
                            </Button>
                        </Grid>
                        
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
        
        <!-- Loading overlay -->
        <Border Grid.RowSpan="2"
                Background="#80000000"
                IsVisible="{Binding IsLoading}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="12">
                <TextBlock Text="Cargando..."
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Medium"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
