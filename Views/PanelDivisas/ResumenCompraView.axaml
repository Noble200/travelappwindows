<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Allva.Desktop.ViewModels"
             x:Class="Allva.Desktop.Views.PanelDivisas.ResumenCompraView"
             x:DataType="vm:CurrencyExchangePanelViewModel">
    
    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #20000000"/>
            <Setter Property="Padding" Value="25"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#f5f5f5">
        <ScrollViewer>
            <StackPanel Spacing="25" Margin="40" MaxWidth="1000" HorizontalAlignment="Center">
                
                <!-- Encabezado éxito -->
                <Border Background="#E8F5E9" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel HorizontalAlignment="Center" Spacing="5">
                        <TextBlock Text="Transacción Completada"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#2E7D32"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding NumeroOperacionDisplay}"
                                   FontSize="16"
                                   Foreground="#388E3C"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Grid ColumnDefinitions="*,280">
                    
                    <!-- Resumen -->
                    <Border Grid.Column="0" Classes="card" Margin="0,0,15,0">
                        <StackPanel Spacing="20">
                            
                            <TextBlock Text="Resumen compra" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#0b5394"/>
                            <Border Height="1" Background="#E0E0E0"/>
                            
                            <!-- Datos del cliente -->
                            <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,15,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ClienteSeleccionado.NombreCompleto}"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Teléfono:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,15,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ClienteSeleccionado.Telefono}"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Dirección:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,15,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ClienteSeleccionado.Direccion, TargetNullValue='-'}"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Nº documento:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,15,8"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ClienteSeleccionado.DocumentoCompleto}"/>
                            </Grid>
                            
                            <Border Height="1" Background="#E0E0E0"/>
                            
                            <!-- Datos transacción -->
                            <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Dinero recibido:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,15,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" FontWeight="Bold" Foreground="#0b5394" FontSize="15">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="AmountReceived"/>
                                            <Binding Path="SelectedCurrency.Name"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Total entregado:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,15,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           Text="{Binding TotalInEuros, StringFormat='{}{0:N2} euros'}" 
                                           FontWeight="Bold" 
                                           Foreground="#0b5394"
                                           FontSize="15"/>
                            </Grid>
                            
                            <Border Height="1" Background="#E0E0E0"/>
                            
                            <!-- Botón imprimir -->
                            <Button Content="Imprimir recibo"
                                    Background="#ffd966"
                                    Foreground="#0b5394"
                                    FontWeight="SemiBold"
                                    FontSize="16"
                                    Padding="25,15"
                                    CornerRadius="6"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Command="{Binding ImprimirReciboCommand}"/>
                            
                        </StackPanel>
                    </Border>
                    
                    <!-- Imágenes documento -->
                    <StackPanel Grid.Column="1" Spacing="15">
                        
                        <Border Background="White"
                                CornerRadius="8"
                                BoxShadow="0 2 8 0 #20000000"
                                Padding="10"
                                IsVisible="{Binding ClienteSeleccionado.TieneImagenFrontal}">
                            <Image Source="{Binding ClienteSeleccionado.ImagenFrontalBitmap}"
                                   MaxHeight="160"
                                   Stretch="Uniform"/>
                        </Border>
                        
                        <Border Background="White"
                                CornerRadius="8"
                                BoxShadow="0 2 8 0 #20000000"
                                Padding="10"
                                IsVisible="{Binding ClienteSeleccionado.TieneImagenTrasera}">
                            <Image Source="{Binding ClienteSeleccionado.ImagenTraseraBitmap}"
                                   MaxHeight="160"
                                   Stretch="Uniform"/>
                        </Border>
                        
                        <Border Background="White"
                                CornerRadius="8"
                                BoxShadow="0 2 8 0 #20000000"
                                Padding="20"
                                MinHeight="200"
                                IsVisible="{Binding !ClienteSeleccionado.TieneImagenes}">
                            <TextBlock Text="Sin imágenes de documento"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#888"/>
                        </Border>
                        
                    </StackPanel>
                    
                </Grid>
                
                <!-- Botones -->
                <Grid ColumnDefinitions="*,*">
                    <Button Grid.Column="0"
                            Content="Atrás"
                            Background="#0b5394"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="16"
                            Padding="20,15"
                            CornerRadius="6"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="0,0,10,0"
                            Command="{Binding VolverATransaccionCommand}"/>
                    <Button Grid.Column="1"
                            Content="Finalizar"
                            Background="#0b5394"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="16"
                            Padding="20,15"
                            CornerRadius="6"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="10,0,0,0"
                            Command="{Binding FinalizarYVolverAPrincipalCommand}"/>
                </Grid>
                
            </StackPanel>
        </ScrollViewer>
    </Border>

</UserControl>
