<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Allva.Desktop.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="520"
        x:Class="Allva.Desktop.Views.ConfirmacionOperacionesView"
        x:DataType="vm:ConfirmacionOperacionesViewModel"
        Title="Confirmar Impresion"
        Width="500"
        Height="520"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#F5F5F5">
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- HEADER -->
        <Border Grid.Row="0" Background="#ffd966" Padding="20,16">
            <TextBlock Text="Confirmar Impresion de Operaciones"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#0b5394"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- CONTENIDO -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Spacing="16">
                
                <!-- INFO GENERACION -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Informacion del Reporte"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#0b5394"/>
                        
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Fecha:" 
                                       FontSize="12" Foreground="#666666" Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FechaGeneracion}" 
                                       FontSize="12" FontWeight="Medium"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Hora:" 
                                       FontSize="12" Foreground="#666666" Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding HoraGeneracion}" 
                                       FontSize="12" FontWeight="Medium"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Usuario:" 
                                       FontSize="12" Foreground="#666666" Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding NombreUsuario}" 
                                       FontSize="12" FontWeight="Medium"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Local:" 
                                       FontSize="12" Foreground="#666666" Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CodigoLocal}" 
                                       FontSize="12" FontWeight="Medium"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- PANEL SELECCIONADO -->
                <Border Background="#0b5394"
                        CornerRadius="6"
                        Padding="16,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="Panel:"
                                   FontSize="13"
                                   Foreground="White"/>
                        <TextBlock Text="{Binding PanelSeleccionado}"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="#ffd966"/>
                    </StackPanel>
                </Border>
                
                <!-- RESUMEN -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Resumen"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#0b5394"/>
                        
                        <Grid ColumnDefinitions="*,*,*">
                            <!-- Total Operaciones -->
                            <StackPanel Grid.Column="0" Spacing="4" HorizontalAlignment="Center">
                                <TextBlock Text="Operaciones"
                                           FontSize="11"
                                           Foreground="#666666"
                                           HorizontalAlignment="Center"/>
                                <Border Background="#0b5394"
                                        CornerRadius="4"
                                        Padding="12,6"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalOperaciones}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                            
                            <!-- Total Euros -->
                            <StackPanel Grid.Column="1" Spacing="4" HorizontalAlignment="Center">
                                <TextBlock Text="Total Euros"
                                           FontSize="11"
                                           Foreground="#666666"
                                           HorizontalAlignment="Center"/>
                                <Border Background="#008800"
                                        CornerRadius="4"
                                        Padding="12,6"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalEuros}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                            
                            <!-- Total Divisas -->
                            <StackPanel Grid.Column="2" Spacing="4" HorizontalAlignment="Center">
                                <TextBlock Text="Total Divisas"
                                           FontSize="11"
                                           Foreground="#666666"
                                           HorizontalAlignment="Center"/>
                                <Border Background="White"
                                        BorderBrush="#0b5394"
                                        BorderThickness="2"
                                        CornerRadius="4"
                                        Padding="12,6"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalDivisas}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#0b5394"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- FILTROS APLICADOS -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16"
                        IsVisible="{Binding !SinFiltros}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Filtros Aplicados"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#0b5394"/>
                        
                        <ItemsControl ItemsSource="{Binding FiltrosAplicados}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2">
                                        <TextBlock Text="{Binding Nombre}"
                                                   FontSize="12"
                                                   Foreground="#666666"/>
                                        <TextBlock Text="{Binding Valor}"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Foreground="#333333"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="Sin filtros aplicados"
                           FontSize="12"
                           Foreground="#888888"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding SinFiltros}"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- BOTONES -->
        <Border Grid.Row="2" Background="White" Padding="20,16" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <Button Grid.Column="1"
                        Content="Cancelar"
                        Background="White"
                        Foreground="#666666"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="20,10"
                        CornerRadius="4"
                        Margin="0,0,12,0"
                        Click="Cancelar_Click"
                        Cursor="Hand"/>
                
                <Button Grid.Column="2"
                        Content="Generar PDF"
                        Background="#0b5394"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        CornerRadius="4"
                        Click="Confirmar_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
