<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Allva.Desktop.ViewModels.Admin"
             x:Class="Allva.Desktop.Views.Admin.AdminDashboardView"
             x:DataType="vm:AdminDashboardViewModel"> 

    <Design.DataContext>
        <vm:AdminDashboardViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <StyleInclude Source="AdminDashboardView.Styles.axaml"/>
    </UserControl.Styles>

    <Grid>
        <!-- Fondo neutro gris claro -->
        <Border Background="#F0F2F5" />

        <Grid ColumnDefinitions="Auto,*">
            
            <!-- SIDEBAR - Se oculta completamente -->
            <Border Grid.Column="0" 
                    Background="White"
                    BoxShadow="2 0 8 0 #15000000"
                    Width="240"
                    IsVisible="{Binding SidebarVisible}">
                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    
                    <!-- Logo Allva + Boton cerrar -->
                    <Grid Grid.Row="0" Margin="16,20,16,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Logo -->
                        <Border Grid.Column="0"
                                Background="#FAFAFA"
                                CornerRadius="10"
                                Padding="12,8"
                                BorderBrush="#E8E8E8"
                                BorderThickness="1"
                                HorizontalAlignment="Left">
                            <Image Source="/Assets/logo.png" 
                                   Width="140" 
                                   Height="55"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapInterpolationMode="HighQuality"/>
                        </Border>
                        
                        <!-- Boton cerrar sidebar -->
                        <Button Grid.Column="1"
                                Command="{Binding OcultarSidebarCommand}"
                                Background="Transparent"
                                Width="32"
                                Height="32"
                                Padding="0"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip.Tip="Ocultar menu"
                                VerticalAlignment="Center">
                            <Canvas Width="16" Height="16">
                                <!-- Flecha izquierda -->
                                <Line StartPoint="10,3" EndPoint="4,8" Stroke="#666666" StrokeThickness="2" StrokeLineCap="Round"/>
                                <Line StartPoint="4,8" EndPoint="10,13" Stroke="#666666" StrokeThickness="2" StrokeLineCap="Round"/>
                                <Line StartPoint="14,2" EndPoint="14,14" Stroke="#666666" StrokeThickness="2" StrokeLineCap="Round"/>
                            </Canvas>
                        </Button>
                    </Grid>

                    <!-- Separador -->
                    <Border Grid.Row="1" 
                            Height="1"
                            Background="#E0E0E0"
                            Margin="16,0,16,8"/>

                    <!-- Menu de navegacion -->
                    <StackPanel Grid.Row="2" Margin="0,8,0,0">
                        
                        <TextBlock Text="MENU PRINCIPAL"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#999999"
                                   Margin="20,0,20,12"/>

                        <!-- Gestion de comercios -->
                        <Button Classes="admin-menu-item"
                                Classes.active="{Binding SelectedModule, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='comercios'}"
                                Command="{Binding NavigateToModuleCommand}"
                                CommandParameter="comercios"
                                IsVisible="{Binding MostrarGestionComercios}"
                                Margin="12,2"
                                CornerRadius="8">
                            <TextBlock Text="Gestion de comercios" Classes="admin-menu-text"/>
                        </Button>

                        <!-- Gestion de usuarios -->
                        <Button Classes="admin-menu-item"
                                Classes.active="{Binding SelectedModule, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='usuarios'}"
                                Command="{Binding NavigateToModuleCommand}"
                                CommandParameter="usuarios"
                                IsVisible="{Binding MostrarGestionUsuarios}"
                                Margin="12,2"
                                CornerRadius="8">
                            <TextBlock Text="Gestion de usuarios" Classes="admin-menu-text"/>
                        </Button>

                        <!-- Usuarios Allva -->
                        <Button Classes="admin-menu-item"
                                Classes.active="{Binding SelectedModule, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='usuarios_allva'}"
                                Command="{Binding NavigateToModuleCommand}"
                                CommandParameter="usuarios_allva"
                                IsVisible="{Binding MostrarUsuariosAllva}"
                                Margin="12,2"
                                CornerRadius="8">
                            <TextBlock Text="Usuarios Allva" Classes="admin-menu-text"/>
                        </Button>

                        <!-- Divisas -->
                        <Button Classes="admin-menu-item"
                                Classes.active="{Binding SelectedModule, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='divisas'}"
                                Command="{Binding NavigateToModuleCommand}"
                                CommandParameter="divisas"
                                IsVisible="{Binding MostrarDivisas}"
                                Margin="12,2"
                                CornerRadius="8">
                            <TextBlock Text="Comisiones" Classes="admin-menu-text"/>
                        </Button>

                        <!-- Operaciones -->
                        <Button Classes="admin-menu-item"
                                Classes.active="{Binding SelectedModule, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='operaciones'}"
                                Command="{Binding NavigateToModuleCommand}"
                                CommandParameter="operaciones"
                                Margin="12,2"
                                CornerRadius="8">
                            <TextBlock Text="Operaciones" Classes="admin-menu-text"/>
                        </Button>

                        <!-- Balance -->
                        <Button Classes="admin-menu-item"
                                Classes.active="{Binding SelectedModule, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='balance'}"
                                Command="{Binding NavigateToModuleCommand}"
                                CommandParameter="balance"
                                IsVisible="{Binding MostrarBalance}"
                                Margin="12,2"
                                CornerRadius="8">
                            <TextBlock Text="Balance" Classes="admin-menu-text"/>
                        </Button>

                    </StackPanel>

                    <!-- Cerrar Sesion -->
                    <Border Grid.Row="3" 
                            Margin="12,0,12,16"
                            Padding="0,12,0,0"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#EEEEEE">
                        <Button Classes="admin-menu-item"
                                Command="{Binding LogoutCommand}"
                                CornerRadius="8"
                                Margin="0">
                            <TextBlock Text="Cerrar Sesion" Classes="admin-menu-text"/>
                        </Button>
                    </Border>

                </Grid>
            </Border>

            <!-- CONTENIDO PRINCIPAL -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*">
                
                <!-- Header superior -->
                <Border Grid.Row="0" 
                        Background="#0b5394"
                        Padding="20,14"
                        Margin="24,24,24,0"
                        CornerRadius="12,12,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        
                        <!-- Boton mostrar sidebar (solo visible cuando esta oculto) -->
                        <Button Grid.Column="0"
                                Command="{Binding MostrarSidebarCommand}"
                                Background="White"
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Padding="0"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,16,0"
                                ToolTip.Tip="Mostrar menu"
                                IsVisible="{Binding !SidebarVisible}"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center">
                            <Canvas Width="16" Height="16">
                                <!-- Icono hamburguesa con flecha -->
                                <Line StartPoint="2,4" EndPoint="14,4" Stroke="#0b5394" StrokeThickness="2" StrokeLineCap="Round"/>
                                <Line StartPoint="2,8" EndPoint="10,8" Stroke="#0b5394" StrokeThickness="2" StrokeLineCap="Round"/>
                                <Line StartPoint="2,12" EndPoint="14,12" Stroke="#0b5394" StrokeThickness="2" StrokeLineCap="Round"/>
                            </Canvas>
                        </Button>
                        
                        <!-- Titulo del modulo -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding SelectedModuleTitle}" 
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>

                        <!-- Botones de usuario y menu -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal" 
                                    Spacing="10"
                                    VerticalAlignment="Center">
                            
                            <!-- Boton Usuario -->
                            <Panel>
                                <Button x:Name="UserButton"
                                        Click="UserButton_Click"
                                        Background="White"
                                        Width="38"
                                        Height="38"
                                        CornerRadius="19"
                                        Padding="0"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center">
                                    <!-- Icono usuario profesional -->
                                    <Canvas Width="20" Height="20">
                                        <!-- Cabeza -->
                                        <Ellipse Width="8" Height="8" Canvas.Left="6" Canvas.Top="2" 
                                                 Fill="#0b5394"/>
                                        <!-- Cuerpo -->
                                        <Ellipse Width="14" Height="10" Canvas.Left="3" Canvas.Top="11" 
                                                 Fill="#0b5394"/>
                                    </Canvas>
                                </Button>
                                
                                <Popup x:Name="UserPopup" 
                                       PlacementTarget="{Binding #UserButton}"
                                       Placement="BottomEdgeAlignedRight"
                                       IsLightDismissEnabled="True"
                                       HorizontalOffset="0"
                                       VerticalOffset="6">
                                    <Border Background="White"
                                            CornerRadius="10"
                                            BoxShadow="0 8 24 0 #30000000"
                                            MinWidth="200"
                                            Padding="0">
                                        <StackPanel>
                                            <Border Padding="16,14" Background="White" CornerRadius="10,10,0,0">
                                                <StackPanel Spacing="2">
                                                    <TextBlock Text="{Binding AdminName}" 
                                                               FontSize="15"
                                                               FontWeight="SemiBold"
                                                               Foreground="#0b5394"/>
                                                    <TextBlock Text="Administrador" 
                                                               FontSize="12"
                                                               Foreground="#888888"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <Border Height="1" Background="#EEEEEE"/>
                                            
                                            <Button Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="16,12"
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Left"
                                                    Cursor="Hand"
                                                    IsEnabled="False">
                                                <Button.Styles>
                                                    <Style Selector="Button:pointerover">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                    </Style>
                                                </Button.Styles>
                                                <TextBlock Text="Mi perfil" 
                                                           FontSize="14" 
                                                           Foreground="#444444"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Panel>

                            <!-- Boton Menu Hamburguesa -->
                            <Panel>
                                <Button x:Name="MenuButton"
                                        Click="MenuButton_Click"
                                        Background="White"
                                        Width="38"
                                        Height="38"
                                        CornerRadius="8"
                                        Padding="0"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center">
                                    <StackPanel Spacing="5" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center">
                                        <Border Width="18" Height="2" Background="#0b5394" CornerRadius="1"/>
                                        <Border Width="18" Height="2" Background="#0b5394" CornerRadius="1"/>
                                        <Border Width="18" Height="2" Background="#0b5394" CornerRadius="1"/>
                                    </StackPanel>
                                </Button>
                                
                                <Popup x:Name="MenuPopup" 
                                       PlacementTarget="{Binding #MenuButton}"
                                       Placement="BottomEdgeAlignedRight"
                                       IsLightDismissEnabled="True"
                                       HorizontalOffset="0"
                                       VerticalOffset="6">
                                    <Border Background="White"
                                            CornerRadius="10"
                                            BoxShadow="0 8 24 0 #30000000"
                                            MinWidth="220"
                                            Padding="0">
                                        <StackPanel>
                                            <Border Padding="16,14" Background="White" CornerRadius="10,10,0,0">
                                                <TextBlock Text="Opciones" 
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#0b5394"/>
                                            </Border>
                                            
                                            <Border Height="1" Background="#EEEEEE"/>
                                            
                                            <ItemsControl ItemsSource="{Binding MenuHamburguesaItems}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Background="Transparent"
                                                                BorderThickness="0"
                                                                Padding="16,12"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                Cursor="Hand"
                                                                Command="{Binding $parent[UserControl].((vm:AdminDashboardViewModel)DataContext).NavigateToMenuHamburguesaItemCommand}"
                                                                CommandParameter="{Binding}">
                                                            <Button.Styles>
                                                                <Style Selector="Button:pointerover">
                                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                                </Style>
                                                            </Button.Styles>
                                                            <TextBlock Text="{Binding Titulo}" 
                                                                       FontSize="14" 
                                                                       Foreground="#444444"/>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Panel>

                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Area de contenido -->
                <Border Grid.Row="1" 
                        Background="White"
                        Margin="24,0,24,24"
                        CornerRadius="0,0,12,12"
                        Padding="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ContentControl Content="{Binding CurrentView}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </Border>

            </Grid>

        </Grid>
    </Grid>

</UserControl>
