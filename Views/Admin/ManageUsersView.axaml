<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Allva.Desktop.ViewModels.Admin"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="Allva.Desktop.Views.Admin.ManageUsersView"
             x:DataType="vm:ManageUsersViewModel">

    <UserControl.Styles>
        <Style Selector="Button.btn-primary">
            <Setter Property="Background" Value="#0b5394"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-primary:pointerover">
            <Setter Property="Background" Value="#ffd966"/>
            <Setter Property="Foreground" Value="#0b5394"/>
        </Style>

        <Style Selector="Button.btn-secondary">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0b5394"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0b5394"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-secondary:pointerover">
            <Setter Property="Background" Value="#0b5394"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.btn-action">
            <Setter Property="Background" Value="#0b5394"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-action:pointerover">
            <Setter Property="Background" Value="#ffd966"/>
            <Setter Property="Foreground" Value="#0b5394"/>
        </Style>

        <Style Selector="Button.btn-danger">
            <Setter Property="Background" Value="#dc3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-danger:pointerover">
            <Setter Property="Background" Value="#c82333"/>
        </Style>

        <Style Selector="Border.usuario-card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="BoxShadow" Value="0 2 6 0 #12000000"/>
        </Style>
        <Style Selector="Border.usuario-card:pointerover">
            <Setter Property="BoxShadow" Value="0 3 10 0 #20000000"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="42"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#0b5394"/>
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="42"/>
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White"
                BorderThickness="0,0,0,1" BorderBrush="#e0e0e0"
                Padding="28,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Estadísticas -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="40">
                    <StackPanel Spacing="4">
                        <TextBlock Text="TOTAL ACTIVOS"
                                   FontSize="12" FontWeight="Bold"
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding UsuariosActivos}"
                                   FontSize="36" FontWeight="Bold"
                                   Foreground="#003366"/>
                    </StackPanel>

                    <StackPanel Spacing="4">
                        <TextBlock Text="TOTAL INACTIVOS"
                                   FontSize="12" FontWeight="Bold"
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding UsuariosInactivos}"
                                   FontSize="36" FontWeight="Bold"
                                   Foreground="#FFC600"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botones de acción -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <!-- Botón Exportar Excel -->
                    <Button Classes="btn-secondary"
                            Command="{Binding ExportarUsuariosExcelCommand}"
                            ToolTip.Tip="Exportar usuarios a Excel">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Canvas Width="18" Height="18" VerticalAlignment="Center">
                                <!-- Icono Excel/Documento -->
                                <Rectangle Width="14" Height="16" Canvas.Left="2" Canvas.Top="1"
                                           Fill="Transparent" Stroke="#0b5394" StrokeThickness="1.5" RadiusX="1" RadiusY="1"/>
                                <Line StartPoint="5,6" EndPoint="13,6" Stroke="#0b5394" StrokeThickness="1.2"/>
                                <Line StartPoint="5,9" EndPoint="13,9" Stroke="#0b5394" StrokeThickness="1.2"/>
                                <Line StartPoint="5,12" EndPoint="10,12" Stroke="#0b5394" StrokeThickness="1.2"/>
                            </Canvas>
                            <TextBlock Text="EXPORTAR" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Botón Nuevo Usuario -->
                    <Button Classes="btn-primary"
                            Command="{Binding MostrarFormularioCrearCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="+" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text="NUEVO USUARIO" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1">
            <!-- ÁREA DE FILTROS Y LISTA -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="28,20" Spacing="20">

                    <!-- FILTROS -->
                    <Border Background="White" CornerRadius="10" Padding="22"
                            BoxShadow="0 2 6 0 #10000000">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Filtros de Búsqueda"
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="#0b5394"/>

                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*,*">

                                <!-- Fila 1 -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,12">
                                    <TextBlock Text="Buscar por nombre/usuario"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="#333" Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding FiltroBusqueda}"
                                             Watermark="Nombre o usuario..."/>
                                </StackPanel>

                                <!-- Filtrar por comercio con autocompletado -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,10,12">
                                    <TextBlock Text="Filtrar por comercio"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="#333" Margin="0,0,0,6"/>
                                    <Panel>
                                        <TextBox Text="{Binding FiltroComercio}"
                                                 Watermark="Nombre del comercio..."/>
                                        <!-- Lista de sugerencias -->
                                        <Border IsVisible="{Binding MostrarSugerenciasComercio}"
                                                Background="White"
                                                BorderBrush="#0b5394"
                                                BorderThickness="1"
                                                CornerRadius="0,0,6,6"
                                                Margin="0,42,0,0"
                                                ZIndex="100">
                                            <ItemsControl ItemsSource="{Binding SugerenciasComercio}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Background="Transparent"
                                                                BorderThickness="0"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                Padding="12,8"
                                                                Cursor="Hand"
                                                                Command="{Binding $parent[UserControl].((vm:ManageUsersViewModel)DataContext).SeleccionarComercioSugeridoCommand}"
                                                                CommandParameter="{Binding}">
                                                            <Button.Styles>
                                                                <Style Selector="Button:pointerover">
                                                                    <Setter Property="Background" Value="#e3f2fd"/>
                                                                </Style>
                                                            </Button.Styles>
                                                            <TextBlock Text="{Binding}" FontSize="13" Foreground="#333"/>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>
                                    </Panel>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,10,12">
                                    <TextBlock Text="Código de local"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="#333" Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding FiltroLocal}"
                                             Watermark="Código de local..."/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="3" Margin="10,0,0,12">
                                    <TextBlock Text="Estado"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="#333" Margin="0,0,0,6"/>
                                    <ComboBox SelectedItem="{Binding FiltroEstado}"
                                              HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="Todos" FontSize="14"/>
                                        <ComboBoxItem Content="Activo" FontSize="14"/>
                                        <ComboBoxItem Content="Inactivo" FontSize="14"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Fila 2 -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Última operación desde"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="#333" Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding FiltroUltimaOperacionDesde, Mode=TwoWay}"
                                             Watermark="dd/MM/yyyy"
                                             MaxLength="10"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,10,0">
                                    <TextBlock Text="Última conexión desde"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="#333" Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding FiltroUltimaConexionDesde, Mode=TwoWay}"
                                             Watermark="dd/MM/yyyy"
                                             MaxLength="10"/>
                                </StackPanel>

                                <!-- Espacio vacío columna 2 -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,10,0"/>

                                <!-- Botones de Buscar y Limpiar -->
                                <StackPanel Grid.Row="1" Grid.Column="3" Margin="10,0,0,0"
                                            Orientation="Horizontal" Spacing="8"
                                            VerticalAlignment="Bottom">
                                    <Button Classes="btn-primary"
                                            Command="{Binding AplicarFiltrosCommand}"
                                            HorizontalAlignment="Stretch"
                                            Width="100">
                                        <TextBlock Text="BUSCAR" FontSize="13"/>
                                    </Button>
                                    <Button Classes="btn-secondary"
                                            Command="{Binding LimpiarFiltrosCommand}"
                                            HorizontalAlignment="Stretch"
                                            Width="100">
                                        <TextBlock Text="LIMPIAR" FontSize="13"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- LISTA DE USUARIOS -->
                    <ItemsControl ItemsSource="{Binding UsuariosFiltrados}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="usuario-card">
                                    <Grid RowDefinitions="Auto,*,Auto">

                                        <!-- Fila superior: Iconos Editar y Eliminar arriba a la derecha -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto">
                                            <!-- Número de usuario + Estado -->
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                                <TextBlock Text="{Binding NumeroUsuario}"
                                                           FontSize="16" FontWeight="Bold"
                                                           Foreground="#0b5394"/>
                                                <Border Background="{Binding EstadoColor}"
                                                        CornerRadius="4"
                                                        Padding="10,3"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding EstadoTexto}"
                                                               FontSize="11" FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Icono Editar (lápiz) -->
                                            <Button Grid.Column="1"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="8"
                                                    Cursor="Hand"
                                                    ToolTip.Tip="Editar usuario"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageUsersViewModel)DataContext).EditarUsuarioCommand}"
                                                    CommandParameter="{Binding}">
                                                <Canvas Width="18" Height="18">
                                                    <!-- Icono lápiz -->
                                                    <Path Data="M2 14.5V18h3.5l10.35-10.35-3.5-3.5L2 14.5zm15.71-9.04a.996.996 0 0 0 0-1.41l-2.34-2.34a.996.996 0 0 0-1.41 0l-1.71 1.71 3.5 3.5 1.96-1.46z"
                                                          Fill="#0b5394"
                                                          Stroke="#0b5394"
                                                          StrokeThickness="0.5"/>
                                                </Canvas>
                                            </Button>

                                            <!-- Icono Eliminar (X roja) -->
                                            <Button Grid.Column="2"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="8"
                                                    Cursor="Hand"
                                                    ToolTip.Tip="Eliminar usuario"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageUsersViewModel)DataContext).EliminarUsuarioCommand}"
                                                    CommandParameter="{Binding}">
                                                <Canvas Width="18" Height="18">
                                                    <!-- Icono X -->
                                                    <Line StartPoint="3,3" EndPoint="15,15" Stroke="#dc3545" StrokeThickness="2.5" StrokeLineCap="Round"/>
                                                    <Line StartPoint="15,3" EndPoint="3,15" Stroke="#dc3545" StrokeThickness="2.5" StrokeLineCap="Round"/>
                                                </Canvas>
                                            </Button>
                                        </Grid>

                                        <!-- Fila central: Info del usuario -->
                                        <StackPanel Grid.Row="1" Spacing="3" Margin="0,8,0,8">
                                            <!-- Nombre completo -->
                                            <TextBlock FontSize="14" Foreground="#333">
                                                <Run Text="Nombre:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding NombreCompleto}"/>
                                            </TextBlock>

                                            <!-- Móvil -->
                                            <TextBlock FontSize="14" Foreground="#555">
                                                <Run Text="Móvil:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding Telefono}"/>
                                            </TextBlock>

                                            <!-- Email -->
                                            <TextBlock FontSize="14" Foreground="#555">
                                                <Run Text="Email:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding Correo}"/>
                                            </TextBlock>

                                            <!-- Comercio -->
                                            <TextBlock FontSize="14" Foreground="#555">
                                                <Run Text="Comercio:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding NombreComercioDisplay}"/>
                                            </TextBlock>

                                            <!-- Última operación -->
                                            <TextBlock FontSize="14" Foreground="#555">
                                                <Run Text="Última operación:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding UltimaOperacionTexto}"/>
                                            </TextBlock>

                                            <!-- Última conexión -->
                                            <TextBlock FontSize="14" Foreground="#555">
                                                <Run Text="Última conexión:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding UltimoAccesoTexto}"/>
                                            </TextBlock>

                                            <!-- Badges -->
                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                                <!-- Badge Código Local -->
                                                <Border Background="#e3f2fd"
                                                        CornerRadius="5" Padding="10,5">
                                                    <TextBlock Text="{Binding CodigoLocalDisplay}"
                                                               FontSize="13" FontWeight="SemiBold"
                                                               Foreground="#0b5394"/>
                                                </Border>

                                                <!-- Badge Tipo -->
                                                <Border Background="#e8f5e9"
                                                        CornerRadius="5" Padding="10,5">
                                                    <TextBlock Text="{Binding TipoUsuarioDisplay}"
                                                               FontSize="13" FontWeight="SemiBold"
                                                               Foreground="#28a745"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Fila inferior: Botón Activar/Desactivar abajo a la derecha -->
                                        <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                            <Button Grid.Column="1"
                                                    Background="{Binding EstadoBotonColor}"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    FontSize="13"
                                                    Padding="14,8"
                                                    BorderThickness="0"
                                                    CornerRadius="5"
                                                    Cursor="Hand"
                                                    MinWidth="120"
                                                    HorizontalContentAlignment="Center"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageUsersViewModel)DataContext).CambiarEstadoUsuarioCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="{Binding EstadoBotonTexto}"/>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Mensaje cuando no hay usuarios -->
                    <Border IsVisible="{Binding !UsuariosFiltrados.Count}"
                            Background="#f8f9fa"
                            CornerRadius="10"
                            Padding="50"
                            MinHeight="220">
                        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="No se encontraron usuarios"
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="#666"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Intenta ajustar los filtros de búsqueda o crea un nuevo usuario"
                                       FontSize="15" Foreground="#999"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- PANEL LATERAL DERECHO - OVERLAY RESPONSIVO -->
            <Border IsVisible="{Binding MostrarPanelDerecho}"
                    Background="#80000000"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ZIndex="100">
                <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch">
                    <Border Background="White"
                            BorderThickness="1,0,0,0"
                            BorderBrush="#e0e0e0"
                            MinWidth="500"
                            MaxWidth="650"
                            Width="580"
                            VerticalAlignment="Stretch">

                        <Grid RowDefinitions="Auto,*,Auto">

                            <!-- Header del panel -->
                            <Border Grid.Row="0" Background="#0b5394" Padding="24,20">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding TituloPanelDerecho}"
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <Button Grid.Column="1"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding CerrarPanelDerechoCommand}"
                                            Cursor="Hand"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="X" FontSize="18" Foreground="White" FontWeight="Bold"/>
                                    </Button>
                                </Grid>
                            </Border>

                    <!-- Contenido del panel -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Panel>

                        <!-- FORMULARIO DE CREAR/EDITAR USUARIO -->
                        <StackPanel IsVisible="{Binding MostrarFormulario}" Margin="24" Spacing="20">

                            <!-- Información Personal -->
                            <Border Background="#f8f9fa" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="Información Personal"
                                               FontSize="17" FontWeight="Bold"
                                               Foreground="#0b5394"/>

                                    <!-- Nombre y Segundo Nombre -->
                                    <Grid ColumnDefinitions="*,*">
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Nombre *"
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding FormNombre}"
                                                     Watermark="Primer nombre..."/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Segundo Nombre"
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding FormSegundoNombre}"
                                                     Watermark="Segundo nombre (opcional)..."/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Apellidos -->
                                    <Grid ColumnDefinitions="*,*">
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Primer Apellido *"
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding FormApellidos}"
                                                     Watermark="Primer apellido..."/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Segundo Apellido"
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding FormSegundoApellido}"
                                                     Watermark="Segundo apellido (opcional)..."/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Número de Usuario -->
                                    <StackPanel>
                                        <TextBlock Text="Número de Usuario (generado automáticamente)"
                                                   FontSize="13" FontWeight="SemiBold"
                                                   Margin="0,0,0,6"/>
                                        <TextBox Text="{Binding FormNumeroUsuario}"
                                                 IsReadOnly="True"
                                                 Background="#e9ecef"
                                                 Watermark="Se genera automáticamente..."/>
                                    </StackPanel>

                                    <!-- Correo y Teléfono -->
                                    <Grid ColumnDefinitions="*,*">
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Correo Electrónico *"
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding FormCorreo}"
                                                     Watermark="usuario@ejemplo.com"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Móvil"
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="0,0,0,6"/>
                                            <TextBox x:Name="TxtTelefono"
                                                     Text="{Binding FormTelefono}"
                                                     Watermark="600.000.000"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Contraseña (CREAR) -->
                                    <StackPanel IsVisible="{Binding !ModoEdicion}">
                                        <TextBlock Text="Contraseña *"
                                                   FontSize="13" FontWeight="SemiBold"
                                                   Margin="0,0,0,6"/>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBox Grid.Column="0"
                                                     Text="{Binding FormPassword}"
                                                     Watermark="Contraseña del usuario"
                                                     Margin="0,0,8,0"/>
                                            <Button Grid.Column="1"
                                                    Classes="btn-primary"
                                                    Command="{Binding GenerarPasswordCommand}"
                                                    MinWidth="130">
                                                <TextBlock Text="Generar" FontSize="13"/>
                                            </Button>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Contraseña (EDITAR) -->
                                    <StackPanel IsVisible="{Binding ModoEdicion}">
                                        <TextBlock Text="Cambiar Contraseña"
                                                   FontSize="13" FontWeight="SemiBold"
                                                   Margin="0,0,0,6"/>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBox Grid.Column="0"
                                                     Text="{Binding FormPassword}"
                                                     Watermark="Nueva contraseña (vacío = mantener)"
                                                     Margin="0,0,8,0"/>
                                            <Button Grid.Column="1"
                                                    Classes="btn-primary"
                                                    Command="{Binding GenerarPasswordCommand}"
                                                    MinWidth="130">
                                                <TextBlock Text="Generar Nueva" FontSize="13"/>
                                            </Button>
                                        </Grid>
                                        <TextBlock Text="Deja vacío si no deseas cambiar la contraseña"
                                                   FontSize="12" Foreground="#666" FontStyle="Italic" Margin="0,6,0,0"/>
                                    </StackPanel>

                                    <!-- Estado Activo -->
                                    <CheckBox IsChecked="{Binding FormActivo}"
                                              Content="Usuario Activo"
                                              FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Asignación de Locales -->
                            <Border Background="#e8f4f8" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="Asignación de Locales"
                                               FontSize="17" FontWeight="Bold"
                                               Foreground="#0b5394"/>

                                    <TextBlock Text="Busca y asigna los locales donde este usuario podrá trabajar"
                                               FontSize="14" Foreground="#666"
                                               TextWrapping="Wrap"/>

                                    <!-- Búsqueda -->
                                    <StackPanel>
                                        <TextBlock Text="Buscar por nombre de comercio"
                                                   FontSize="13" FontWeight="SemiBold"
                                                   Margin="0,0,0,6"/>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBox Grid.Column="0"
                                                     Text="{Binding BusquedaComercio}"
                                                     Watermark="Nombre del comercio..."
                                                     Margin="0,0,8,0"/>

                                            <Button Grid.Column="1"
                                                    Classes="btn-primary"
                                                    Command="{Binding BuscarLocalesPorComercioCommand}"
                                                    MinWidth="100">
                                                <TextBlock Text="Buscar" FontSize="13"/>
                                            </Button>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Resultados de búsqueda -->
                                    <Border IsVisible="{Binding MostrarResultadosBusqueda}"
                                            Background="White"
                                            BorderBrush="#0b5394"
                                            BorderThickness="1"
                                            CornerRadius="6">
                                        <StackPanel>
                                            <ScrollViewer MaxHeight="200">
                                                <ItemsControl ItemsSource="{Binding ResultadosBusquedaLocales}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderThickness="0,0,0,1"
                                                                    BorderBrush="#f0f0f0"
                                                                    Padding="12"
                                                                    Background="{Binding EstaSeleccionado, Converter={StaticResource BoolToBackgroundConverter}}">
                                                                <Grid ColumnDefinitions="Auto,*">
                                                                    <CheckBox Grid.Column="0"
                                                                              IsChecked="{Binding EstaSeleccionado}"
                                                                              VerticalAlignment="Center"
                                                                              Margin="0,0,12,0"/>
                                                                    <StackPanel Grid.Column="1" Spacing="3">
                                                                        <TextBlock Text="{Binding CodigoLocal}"
                                                                                   FontSize="14"
                                                                                   FontWeight="Bold"
                                                                                   Foreground="#0b5394"/>
                                                                        <TextBlock Text="{Binding NombreLocal}"
                                                                                   FontSize="13"
                                                                                   Foreground="#333"/>
                                                                        <TextBlock Text="{Binding DireccionCompleta}"
                                                                                   FontSize="12"
                                                                                   Foreground="#666"
                                                                                   TextWrapping="Wrap"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                            <Border Background="#f8f9fa" Padding="12" BorderThickness="0,1,0,0" BorderBrush="#e0e0e0">
                                                <Grid ColumnDefinitions="*,Auto,Auto">
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding ContadorSeleccionados}"
                                                               FontSize="13"
                                                               Foreground="#666"
                                                               VerticalAlignment="Center"/>
                                                    <Button Grid.Column="1"
                                                            Classes="btn-secondary"
                                                            Command="{Binding CerrarBusquedaLocalesCommand}"
                                                            Margin="0,0,8,0"
                                                            Padding="12,6">
                                                        <TextBlock Text="Cancelar" FontSize="12"/>
                                                    </Button>
                                                    <Button Grid.Column="2"
                                                            Classes="btn-primary"
                                                            Command="{Binding AgregarLocalesSeleccionadosCommand}"
                                                            Padding="12,6">
                                                        <TextBlock Text="Agregar Seleccionados" FontSize="12"/>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!-- Tipo de empleado -->
                                    <Border Background="White"
                                            CornerRadius="6"
                                            Padding="14"
                                            BorderThickness="1"
                                            BorderBrush="#0b5394">
                                        <StackPanel Spacing="4">
                                            <TextBlock Text="Tipo de empleado:"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#333"/>
                                            <TextBlock Text="{Binding TipoEmpleadoTexto}"
                                                       FontSize="15"
                                                       FontWeight="Bold"
                                                       Foreground="#0b5394"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Locales asignados -->
                                    <StackPanel IsVisible="{Binding LocalesAsignados.Count}" Spacing="10">
                                        <TextBlock Text="Locales Asignados:"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="#0b5394"/>

                                        <ItemsControl ItemsSource="{Binding LocalesAsignados}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White"
                                                            BorderBrush="#0b5394"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Padding="14"
                                                            Margin="0,0,0,8">
                                                        <Grid ColumnDefinitions="*,Auto">
                                                            <StackPanel Grid.Column="0" Spacing="3">
                                                                <TextBlock Text="{Binding CodigoLocal}"
                                                                           FontSize="14"
                                                                           FontWeight="Bold"
                                                                           Foreground="#0b5394"/>
                                                                <TextBlock Text="{Binding NombreLocal}"
                                                                           FontSize="13"
                                                                           Foreground="#333"/>
                                                                <TextBlock Text="{Binding DireccionCompleta}"
                                                                           FontSize="12"
                                                                           Foreground="#666"
                                                                           TextWrapping="Wrap"/>
                                                            </StackPanel>

                                                            <Button Grid.Column="1"
                                                                    Background="#dc3545"
                                                                    Foreground="White"
                                                                    FontSize="12"
                                                                    FontWeight="Bold"
                                                                    Padding="12,6"
                                                                    CornerRadius="5"
                                                                    BorderThickness="0"
                                                                    VerticalAlignment="Center"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageUsersViewModel)DataContext).QuitarLocalAsignadoCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="Quitar"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- Mensaje si no hay locales -->
                                    <Border IsVisible="{Binding !LocalesAsignados.Count}"
                                            Background="White"
                                            CornerRadius="6"
                                            Padding="24"
                                            BorderThickness="1"
                                            BorderBrush="#ddd">
                                        <TextBlock Text="No hay locales asignados. Busca y selecciona al menos un local."
                                                   FontSize="13" Foreground="#666"
                                                   TextWrapping="Wrap"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                        </StackPanel>

                        <!-- VER DETALLES DEL USUARIO -->
                        <StackPanel IsVisible="{Binding !MostrarFormulario}" Margin="24" Spacing="20">

                            <!-- Información General -->
                            <Border Background="#f8f9fa" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="Información General"
                                               FontSize="17" FontWeight="Bold"
                                               Foreground="#0b5394"/>

                                    <StackPanel Spacing="12">
                                        <Grid ColumnDefinitions="150,*">
                                            <TextBlock Grid.Column="0" Text="Nombre Completo:"
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UsuarioSeleccionado.NombreCompleto}"
                                                       FontSize="14"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="150,*">
                                            <TextBlock Grid.Column="0" Text="Número Usuario:"
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UsuarioSeleccionado.NumeroUsuario}"
                                                       FontSize="14"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="150,*">
                                            <TextBlock Grid.Column="0" Text="Correo:"
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UsuarioSeleccionado.Correo}"
                                                       FontSize="14"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="150,*">
                                            <TextBlock Grid.Column="0" Text="Móvil:"
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UsuarioSeleccionado.Telefono}"
                                                       FontSize="14"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="150,*">
                                            <TextBlock Grid.Column="0" Text="Tipo:"
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UsuarioSeleccionado.TipoUsuarioDisplay}"
                                                       FontSize="14"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="150,*">
                                            <TextBlock Grid.Column="0" Text="Último Acceso:"
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UsuarioSeleccionado.UltimoAccesoTexto}"
                                                       FontSize="14"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="150,*">
                                            <TextBlock Grid.Column="0" Text="Estado:"
                                                       FontWeight="SemiBold" FontSize="14"
                                                       VerticalAlignment="Center"/>
                                            <Border Grid.Column="1"
                                                    Background="{Binding UsuarioSeleccionado.EstadoColor}"
                                                    CornerRadius="5"
                                                    Padding="12,5"
                                                    HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding UsuarioSeleccionado.EstadoTexto}"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="13"/>
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Locales Asignados -->
                            <Border Background="#e8f4f8" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="14">
                                    <TextBlock Text="Locales Asignados"
                                               FontSize="17" FontWeight="Bold"
                                               Foreground="#0b5394"/>

                                    <ItemsControl ItemsSource="{Binding LocalesAsignados}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White"
                                                        CornerRadius="6"
                                                        Padding="16"
                                                        Margin="0,0,0,10"
                                                        BorderThickness="1"
                                                        BorderBrush="#0b5394">
                                                    <StackPanel Spacing="4">
                                                        <TextBlock Text="{Binding CodigoLocal}"
                                                                   FontSize="15"
                                                                   FontWeight="Bold"
                                                                   Foreground="#0b5394"/>
                                                        <TextBlock Text="{Binding NombreLocal}"
                                                                   FontSize="14"
                                                                   Foreground="#333"
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding DireccionCompleta}"
                                                                   FontSize="13"
                                                                   Foreground="#666"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Panel>
                    </ScrollViewer>

                    <!-- Footer con botones -->
                    <Border Grid.Row="2"
                            IsVisible="{Binding MostrarFormulario}"
                            Background="#f8f9fa"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#e0e0e0"
                            Padding="24,16">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <Button Grid.Column="1"
                                    Classes="btn-secondary"
                                    Command="{Binding CerrarPanelDerechoCommand}"
                                    Margin="0,0,12,0"
                                    MinWidth="110">
                                <TextBlock Text="Cancelar" FontSize="14"/>
                            </Button>
                            <Button Grid.Column="2"
                                    Classes="btn-primary"
                                    Command="{Binding GuardarUsuarioCommand}"
                                    MinWidth="160">
                                <TextBlock Text="{Binding BotonGuardarTexto}" FontSize="14"/>
                            </Button>
                        </Grid>
                    </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- VENTANA DE CONFIRMACIÓN PARA ELIMINAR USUARIO -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                IsVisible="{Binding MostrarDialogoConfirmacion}"
                Background="#80000000"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ZIndex="1001">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="28"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 24 0 #40000000">
                <StackPanel Spacing="20">
                    <TextBlock Text="CONFIRMAR ELIMINACIÓN"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#dc3545"
                               HorizontalAlignment="Center"/>

                    <StackPanel Spacing="14">
                        <TextBlock Text="¿Estás seguro de que deseas eliminar este usuario?"
                                   FontSize="15"
                                   Foreground="#333"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>

                        <Border Background="#fff3cd"
                                BorderThickness="1"
                                BorderBrush="#ffc107"
                                CornerRadius="6"
                                Padding="16">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Usuario a eliminar:"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#856404"/>
                                <TextBlock Text="{Binding UsuarioSeleccionado.NombreCompleto}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#003366"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding UsuarioSeleccionado.NumeroUsuario}"
                                           FontSize="14"
                                           Foreground="#666"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#f8d7da"
                                BorderThickness="1"
                                BorderBrush="#dc3545"
                                CornerRadius="6"
                                Padding="14">
                            <TextBlock FontSize="13"
                                       Foreground="#721c24"
                                       TextWrapping="Wrap">
                                <Run Text="ADVERTENCIA:" FontWeight="Bold"/>
                                <Run Text=" Esta acción NO se puede deshacer. Se eliminarán todos los datos del usuario."/>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <Grid ColumnDefinitions="*,*">
                        <Button Grid.Column="0"
                                Classes="btn-secondary"
                                Command="{Binding CancelarEliminarUsuarioCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,8,0">
                            <TextBlock Text="CANCELAR" FontSize="14" FontWeight="Bold"/>
                        </Button>
                        <Button Grid.Column="1"
                                Classes="btn-danger"
                                Command="{Binding ConfirmarEliminarUsuarioCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="8,0,0,0">
                            <TextBlock Text="SÍ, ELIMINAR" FontSize="14" FontWeight="Bold"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>

        <!-- INDICADOR DE CARGA -->
        <Border IsVisible="{Binding Cargando}"
                Background="#80000000"
                Grid.Row="0"
                Grid.RowSpan="2">
            <Border Background="White"
                    CornerRadius="12"
                    Padding="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 24 0 #40000000">
                <StackPanel Spacing="18" HorizontalAlignment="Center">
                    <TextBlock Text="Procesando..."
                               FontSize="20" FontWeight="Bold"
                               Foreground="#0b5394"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Por favor espere..."
                               FontSize="15" Foreground="#666"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- NOTIFICACIÓN DE ÉXITO/ERROR -->
        <Border IsVisible="{Binding MostrarMensajeExito}"
                Background="{Binding MensajeExitoColor}"
                CornerRadius="8"
                Padding="24,16"
                Margin="28"
                BoxShadow="0 4 12 0 #40000000"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="0"
                Grid.RowSpan="2">
            <TextBlock Text="{Binding MensajeExito}"
                       FontSize="15" FontWeight="Bold"
                       Foreground="White"
                       TextWrapping="Wrap"
                       MaxWidth="650"
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
