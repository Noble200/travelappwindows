<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Allva.Desktop.Views.Admin.MenuHamburguesa.CuentasBancariasAdminView">

    <Grid RowDefinitions="Auto,*">

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                Padding="24,16"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <StackPanel Spacing="4">
                <TextBlock Text="Cuentas Bancarias"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#0b5394"/>
                <TextBlock Text="Gestiona las cuentas bancarias visibles en el Front Office"
                           FontSize="13"
                           Foreground="#666666"/>
            </StackPanel>
        </Border>

        <!-- CONTENIDO -->
        <Border Grid.Row="1"
                Background="White"
                Padding="24">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="12">
                <TextBlock Text="Seccion Cuentas Bancarias"
                           FontSize="18"
                           Foreground="#888888"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Aqui podras gestionar las cuentas bancarias del Front Office"
                           FontSize="13"
                           Foreground="#AAAAAA"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>

</UserControl>
