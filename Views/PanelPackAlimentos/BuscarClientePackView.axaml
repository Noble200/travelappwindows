<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Allva.Desktop.ViewModels"
             x:Class="Allva.Desktop.Views.PanelPackAlimentos.BuscarClientePackView"
             x:DataType="vm:FoodPacksViewModel">
    
    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #20000000"/>
            <Setter Property="Padding" Value="24"/>
        </Style>
        <Style Selector="TextBox.input">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#0b5394"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinHeight" Value="46"/>
        </Style>
        <Style Selector="Border.cliente-row">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Border.cliente-row:pointerover">
            <Setter Property="Background" Value="#d4e5f7"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#f5f5f5">
        <Grid RowDefinitions="Auto,Auto,*" Margin="40,30">
            
            <!-- Encabezado -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,24">
                <Button Grid.Column="0"
                        Content="Volver"
                        Background="#6c757d"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="15"
                        Padding="28,14"
                        CornerRadius="6"
                        Command="{Binding VolverAVistaPrincipalCommand}"/>
                
                <TextBlock Grid.Column="1"
                           Text="Buscar Cliente"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#0b5394"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="2"
                        Content="Nuevo Cliente"
                        Background="#0b5394"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="15"
                        Padding="28,14"
                        CornerRadius="6"
                        Command="{Binding IrANuevoClienteCommand}"/>
            </Grid>
            
            <!-- Barra de busqueda -->
            <Border Grid.Row="1" Classes="card" Margin="0,0,0,20">
                <Grid ColumnDefinitions="180,*,Auto">
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding TiposBusquedaCliente}"
                              SelectedItem="{Binding TipoBusquedaSeleccionado}"
                              MinHeight="46"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"/>
                    
                    <TextBox Grid.Column="1"
                             Watermark="Buscar por nombre, documento o telefono..."
                             Text="{Binding BusquedaCliente}"
                             Classes="input"
                             VerticalAlignment="Center"
                             Margin="0,0,16,0"/>
                    
                    <Button Grid.Column="2"
                            Content="Buscar"
                            Background="#ffd966"
                            Foreground="#0b5394"
                            FontWeight="Bold"
                            FontSize="15"
                            Padding="40,14"
                            CornerRadius="6"
                            Command="{Binding BuscarClientesCommand}"/>
                </Grid>
            </Border>
            
            <!-- Lista de clientes -->
            <Border Grid.Row="2" Classes="card">
                <Grid RowDefinitions="Auto,*">
                    <!-- Encabezado tabla -->
                    <Border Grid.Row="0" Background="#0b5394" CornerRadius="6,6,0,0" Padding="20,14">
                        <Grid ColumnDefinitions="2*,*,*,Auto">
                            <TextBlock Grid.Column="0" Text="NOMBRE COMPLETO" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="DOCUMENTO" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Grid.Column="2" Text="TELEFONO" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Grid.Column="3" Text="ACCION" Foreground="White" FontWeight="Bold" FontSize="14" Width="140" TextAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Lista -->
                    <ScrollViewer Grid.Row="1">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ClientesEncontrados}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Classes="cliente-row">
                                            <Grid ColumnDefinitions="2*,*,*,Auto">
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding NombreCompleto}" 
                                                           FontWeight="SemiBold"
                                                           FontSize="15"
                                                           Foreground="#0b5394"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding DocumentoCompleto}" 
                                                           FontSize="14"
                                                           Foreground="#444444"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Telefono}" 
                                                           FontSize="14"
                                                           Foreground="#444444"
                                                           VerticalAlignment="Center"/>
                                                <Button Grid.Column="3"
                                                        Content="Seleccionar"
                                                        Background="#28a745"
                                                        Foreground="White"
                                                        FontWeight="SemiBold"
                                                        FontSize="14"
                                                        Padding="20,10"
                                                        CornerRadius="6"
                                                        Width="140"
                                                        HorizontalContentAlignment="Center"
                                                        Command="{Binding $parent[ItemsControl].((vm:FoodPacksViewModel)DataContext).SeleccionarClienteYContinuarCommand}"
                                                        CommandParameter="{Binding}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Sin resultados -->
                            <Border IsVisible="{Binding !ClientesEncontrados.Count}"
                                    Padding="60" HorizontalAlignment="Center">
                                <StackPanel Spacing="16" HorizontalAlignment="Center">
                                    <TextBlock Text="No hay clientes para mostrar"
                                               FontSize="18" Foreground="#666666" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Realice una busqueda o registre un nuevo cliente"
                                               FontSize="14" Foreground="#999999" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Loading -->
            <Border Grid.Row="2" Background="#E3F2FD" CornerRadius="8" Padding="20"
                    IsVisible="{Binding EstaCargando}" VerticalAlignment="Top" Margin="0,20,0,0">
                <TextBlock Text="Buscando clientes..." HorizontalAlignment="Center" Foreground="#1565C0" FontWeight="SemiBold" FontSize="15"/>
            </Border>
            
            <!-- Error -->
            <Border Grid.Row="2" Background="#FFEBEE" CornerRadius="8" Padding="16"
                    IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    VerticalAlignment="Top" Margin="0,20,0,0">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828" FontWeight="SemiBold"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
